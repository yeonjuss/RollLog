<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:src="@drawable/ic_action_back"/>
        <TextView
            android:id="@+id/mypage_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="마이페이지"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/iv_back"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_check"
            android:layout_alignParentRight="true"
            android:padding="8dp"/>

    </RelativeLayout>

    <!-- 사용자 이름 -->
    <TextView
        android:id="@+id/userNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="8dp"/>

    <!-- 사용자 이메일 -->
    <TextView
        android:id="@+id/userEmailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:padding="8dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#E6E3E3"
        android:background="@drawable/bg_box">

    <!-- 선택한 벨트 이미지 -->
    <ImageView
        android:id="@+id/selectedBeltImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="8dp"/>

    <!-- 선택한 벨트 이름 -->
    <TextView
        android:id="@+id/selectedBeltTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/selectedBeltImageView"
        android:layout_marginTop="20dp"
        android:padding="8dp"/>

    <!-- 선택한 벨트 스토리 -->
    <TextView
        android:id="@+id/beltStoryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/selectedBeltImageView"
        android:layout_below="@id/selectedBeltTextView"
        android:layout_marginLeft="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="70dp"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:textSize="11sp"
            android:text="업데이트"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="올해의 목표를 입력하세요"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="#E6E3E3"
            android:background="@drawable/bg_box"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이달의 목표를 입력하세요"
            android:layout_marginTop="16dp"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="#E6E3E3"
            android:background="@drawable/bg_box"/>
    </LinearLayout>



</LinearLayout>
