<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Project" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">?attr/actionBarSize</item>
<!--        <item name="background">@color/white</item>-->
        <item name="android:textSize">12sp</item>
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>

    <style name="CalendarWidgetHeader">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#382626</item>
        <item name="android:fontFamily">@font/yeongdeok_sea</item>
        <item name="background">@color/black</item>
    </style>

    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
      <item name="android:textColor">#8A4245</item>
        <item name="android:fontFamily">@font/yeongdeok_sea</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/yeongdeok_sea</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="log">
        <item name="android:fontFamily">@font/yeongdeok_sea</item>

    </style>

    <!-- 오버플로우 메뉴 스타일 -->
    <style name="CustomPopupMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">#000000</item> <!-- 메뉴 배경 색상 -->

    </style>

    <!-- Toolbar 테마 -->
    <style name="CustomToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="popupMenuStyle">@style/CustomPopupMenu</item>
    </style>




    <style name="Theme.Project" parent="Base.Theme.Project" />
</resources>